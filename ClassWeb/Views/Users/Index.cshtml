@model Tuple<List<User>, List<User>>
@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "Index";
}
@if (@Context.Session.GetString("UserRole") == "True")
{
    @await Html.PartialAsync("~/Views/Users/_SideBar.cshtml");
}
<h2>Index</h2>
<p>
    <a asp-action="Create">Create New</a>
</p>
<span class="alert">@ViewBag.Message</span>
<div class="panel panel-primary filterable">
    <div class="panel-heading">
        <h3 class="panel-title">Users</h3>
        <div class="pull-right">
            <button class="btn btn-default btn-filter"><span class="glyphicon glyphicon-filter"></span> Filter</button>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr class="filters">
                <th><input type="text" class="form-control" placeholder="ID" disabled></th>
                <th><input type="text" class="form-control" placeholder="User Name" disabled></th>
                <th><input type="text" class="form-control" placeholder="Email" disabled></th>
                <th><input type="text" class="form-control" placeholder="Action" disabled></th>
                <th><input type="text" class="form-control" placeholder="Disable" disabled></th>
                <th><input type="text" class="form-control" placeholder="Archive" disabled></th>
                <th><input type="text" class="form-control" placeholder="Verify" disabled></th>
            </tr>
        </thead>
        <tbody id="UserTable">
            @if (@Model.Item1.Count > 0)
            {
                <tr>
                    <td>Active Users</td>
                </tr>
                @foreach (User item in Model.Item1)
                {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.ID)</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.EmailAddress)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                    <td><input type="checkbox" value="@item.ID" data-type="DisableUser" /></td>
                    @if (item.Archived == 1)
                    {
                        <td><input type="checkbox" value="@item.ID" checked data-type="ArchiveUser" /></td>
                    }
                    else
                    {
                        <td><input type="checkbox" value="@item.ID" data-type="ArchiveUser" /></td>
                    }
                    @if (item.VerificationCode.Trim().Length > 0)
                    {
                        <td><input type="checkbox" value="@item.ID" data-type="VerifyUser" /></td>
                    }
                </tr>
                }
            } @if (@Model.Item2.Count > 0)
            {
                <tr>
                    <td>Disabled Users</td>
                </tr>
                @foreach (User item in Model.Item2)
                {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.ID)</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.EmailAddress)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                    <td><input type="checkbox" value="@item.ID" checked data-type="DisableUser" /></td>
                    @if (item.Archived == 1)
                    {
                        <td><input type="checkbox" value="@item.ID" checked data-type="ArchiveUser" /></td>
                    }
                    else
                    {
                        <td><input type="checkbox" value="@item.ID" data-type="ArchiveUser" /></td>
                    }
                    @if (item.VerificationCode.Trim().Length>0)
                    {
                        <td><input type="checkbox" value="@item.ID" data-type="VerifyUser" /></td>
                    }
                </tr>
                }
            }
        </tbody>
    </table>
</div>