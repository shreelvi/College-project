                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Roles.AsBinary)</td>
                            <td>@Html.DisplayFor(modelItem => item.Roles.DAVESet)</td>
                        </tr>
                    </tbody>
                </table>
            </td>
            <td class="Assignment">
                <table>
                    <thead>
                        <tr>
                            <th>
                                <p>Delete&nbsp;</p>
                            </th>
                            <th>
                                <p>Add&nbsp;</p>
                            </th>
                            <th>
                                <p>View&nbsp;</p>
                            </th>
                            <th>
                                <p>Edit&nbsp;</p>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
