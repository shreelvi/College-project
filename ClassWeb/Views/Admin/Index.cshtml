@using Microsoft.AspNetCore.Http;
@model List<ClassWeb.Models.User>
@{
    ViewData["Title"] = "Dashboard";
}

<h2>Admin Dashboard</h2>

<style>
    .card {
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        width: 30%;
        border-radius: 5px;
    }


    .card:hover {
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
    }

    img {
        border-radius: 5px 5px 0 0;
    }
</style>
<!-- Page content -->
<div>
    <div style="height:40px; width:300px; background-color:lightcyan"><h4>&nbsp; Welcome, @Context.Session.GetString("username").</h4></div>
    <div class="classes">
        <div style="background-color: ghostwhite; height: 150%; float:left; margin: 10px;" class="card">
            <div class="container">
                <h4>Courses</h4>
                <h4>Number of Courses: 21</h4>
                <a asp-controller="Course" asp-action="Index">View</a>
            </div>
        </div>
    </div>
</div>



