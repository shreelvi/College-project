@{
    ViewData["Title"] = "Home Page";
}

<p style="color:red">@ViewData["LoginError"]</p>

<div class="row">
    <div class="col-md-5">
        <h1 style="color:darkorange">Idaho State University, College of Business -- Class Web</h1><br />
        <h2>Welcome to Class Web</h2>
        <p>
            ClassWeb is a website where students can manage
            assignments for classes taken each semester. It is designed
            for ISU College of Business students and faculty members.<br /><br />
            It is currently under development.
            <br /><br />
            Test Login for admin, students and grader with: <br />
            username: admin, student, grader; Pwd: test
        </p>
    </div>
    <div style="float:right; width:600px">
        @await Html.PartialAsync("../Account/_LoginPartial.cshtml")
        <div class="form-group">
            <a asp-controller="Group" asp-action="LoginGroup">Group Login</a>
        </div>
        <div class="form-group">
            <a asp-controller="Group" asp-action="AddGroup">Register as a new group</a>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

