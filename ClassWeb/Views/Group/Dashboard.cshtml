@model List<ClassWeb.Models.Assignment>

@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "Dashboard ";
}
<p style="color:blue">@ViewBag.folder</p>
<p style="color:red">@ViewData["UserGroupAddError"]</p>
<p style="color:red">@ViewData["UserGroupAddSuccess"]</p>


<div style="float:right">
    <a href="EditProfile"><i style="font-size: 30px; float: right" class="glyphicon glyphicon-user"></i></a>
    <a href="Notification"><i style="font-size: 30px; float:right" class="glyphicon glyphicon-bell"></i></a>

    <br /><br />
    <a style="color:darkblue; float: right" asp-controller="Group" asp-action="logout">Logout</a>
    <a style="color:darkblue; float: right" asp-controller="Group" asp-action="Profile">Edit Profile <text>&nbsp;</text></a>
</div>

<div>
    <h3 style="color:darkorange;display:inline-block">Group Dashboard</h3><br />
    <p class="text-danger">@TempData["Message"]</p>
    <p class="text-danger">@TempData["Error"]</p>
    <h4 style="color:blue; font-size: 20px">Welcome, @Context.Session.GetString("UserName")</h4><br />

    <a style="color:blue" href="/Group/ViewGroupUsers">View Users</a><br /><br />
    <a style="color:blue" asp-controller="Group" asp-action="AddUserToGroup"><strong>Add Users</strong></a> <br /><br />

</div>