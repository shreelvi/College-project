@using ClassWeb.Models
@model GroupLoginModel
@{
    ViewData["Title"] = "AddGroup";
}
@* Summary- This is a add group view used to add a group with different users. Created by Sakshi, edited by Elvis *@
<p style="color:red">@ViewBag.UserAddError</p>
<p style="color:red">@ViewBag.Error</p>
<p style="color:red">@ViewData["UserAddGroupError"]</p>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <h2 style="color: darkorange">Add a new group.</h2>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="Group">
                <div class="form-group">
                    <label asp-for="EmailAddress"></label>
                    <input asp-for="EmailAddress" class="form-control" />
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div>
                <label for="Users">Number of users:</label>
                <input name="Users" type="number" id="numberOfStudents" />

            </div>
            <div id="DynamicEmail">

            </div>
            <div class="Users">
                <label>Add users by email address:</label>
                <input name="Users[0].ID" type="hidden" value="0" />
                <div class="form-group">
                    <label>EmailAdress 1</label>
                    <input asp-for="Users[0].EmailAddress" class="form-control" />
                </div>
                <input name="Users[1].ID" type="hidden" value="0" />
                <div class="form-group">
                    <label>EmailAdress 2</label>
                    <input asp-for="Users[1].EmailAddress" class="form-control" />
                </div>
                <input name="Users[2].ID" type="hidden" value="0" />
                <div class="form-group">
                    <label>EmailAdress 3</label>
                    <input asp-for="Users[2].EmailAddress" class="form-control" />
                </div>
                <input name="Users[3].ID" type="hidden" value="0" />
                <div class="form-group">
                    <label>EmailAdress 4</label>
                    <input asp-for="Users[3].EmailAddress" class="form-control" />
                </div>

            </div>
            <button type="submit" class="btn btn-default">Register</button>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
