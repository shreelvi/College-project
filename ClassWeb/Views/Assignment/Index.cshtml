@*@model IEnumerable<ClassWeb.Models.Assignment>*@
@model List<ClassWeb.Models.Assignment>
@{
    ViewData["Title"] = "Index";
}

@if (ViewData["Success"] != null)
{<a style="color:blue" href='javascript:history.go(-2)'>Return to the dashboard</a><br /><br />}
else
{<a style="color:blue" href='javascript:history.go(-1)'>Return to the dashboard</a><br /><br />}

<a style="color:blue" href="@ViewData["Directory"]" target="_blank">Browse Your Assignment Directory</a><br /><br />
<p style="color:Green">@ViewData["Success"]</p>
<h4 class="text-info font-weight-bold">Upload Assignment</h4>
<div class="input-group">
    <form method="post" enctype="multipart/form-data" asp-controller="Assignment" asp-action="Index">
        <div class="form-group">
            <div class="col-md-10">
                <p>Upload one or more files using this form:</p>
                <input type="file" name="files" multiple />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <br /><input type="submit" value="Upload" />
            </div>
        </div>
    </form>
</div>

<table class="table">

    <thead>
        <tr>
            <th>File Name</th>
            <th>Assignment Description</th>
            <th>Date Submitted</th>
            <th>Grade</th>
            <th>Feedback</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody>
            <tr class="mt-5">
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.DateSubmission)</td>
                <td>@Html.DisplayFor(modelItem => item.Grade)</td>
                <td>@Html.DisplayFor(modelItem => item.Feedback)</td>
                <td><a asp-action="Download" asp-route-id="@item.Name"><span class="btn-outline-success btn glyphicon glyphicon-save"></span>Download</a></td>
                <td><a asp-action="Delete" asp-route-id="@item.ID"><span class=" btn-outline-danger btn glyphicon glyphicon-trash"></span>Delete</a></td>
                <td><a asp-action="View" asp-route-id="@item.Name"><span class="btn bg-light btn-primary text-dark glyphicon glyphicon-eye-open">View</span></a></td>
            </tr>
        </tbody>
    }
</table>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script src="~/js/file.js"></script>
