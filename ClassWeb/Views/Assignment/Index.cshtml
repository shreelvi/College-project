@model Tuple<List<Assignment>, List<string>>
<h4 class="text-info font-weight-bold">Upload Assignment</h4>
<div class="input-group">
    <form asp-controller="Assignment" asp-action="index" method="post" mu enctype="multipart/form-data">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Select File:</span>
                <input type="file" id="file" name="file" class="input-group-text">
                <input type="submit" class="btn btn-outline-success" value="Upload" />
            </div>
        </div>
        <div>
            <span class="info alert-success">@ViewBag.Message</span>
            <span class="info alert-danger">  @ViewBag.Error</span>
        </div>
    </form>
</div>
<br />
<br />
<h2 class="text-success text-center">Document List</h2>
<table class="table table-striped bg-light">
    <thead>
        <tr>
            <th>
                <span class="glyphicon glyphicon-home">
                    <a href="\Assignment\SetDefaultDir">Home</a>
                </span>
            </th>
            <th>
                <span class="glyphicon glyphicon-arrow-up">
                    <a href="\Assignment\ChangeDirDown">Folder Up</a>
                </span>
            </th>
            <th>
                <!-- Button trigger modal -->
                <button type="button" class="glyphicon glyphicon-folder-open btn btn-success btn-outline-success" data-toggle="modal" data-target="#CreateFolder">
                    Create Folder
                </button>

                <!-- Modal -->
                <div class="modal fade" id="CreateFolder" tabindex="-1" role="dialog" aria-labelledby="CreateFolder" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="CreateFolder">Modal title</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            
                            <div class="modal-body">
                                <form asp-action="CreateFolder" id="CreateFolderForm" asp-controller="Assignment" method="post">
                                    <label for="folderName">Folder Name:</label>
                                    <input name="folderName" id="folderName" value="" />
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <!--https://stackoverflow.com/questions/16154216/twitter-bootstrap-modal-form-submit-->
                                <button type="submit" class="btn btn-primary" onclick="event.preventDefault();document.getElementById('CreateFolderForm').submit();">Create Folder</button>
                            </div>
                        </div>
                    </div>
                </div>
            </th>
        </tr>
        <tr>
            <th scope="col">File Name</th>
            <th scope="col">File Size</th>
            <th scope="col">Download</th>
            <th scope="col">Delete</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
