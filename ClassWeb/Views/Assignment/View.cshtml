<script>
    var editor = CodeMirror.fromTextArea(myTextarea, {
        lineNumbers: true,
        outerHeight=100%
    });
</script>
@if (ViewBag.Readable == true)
{
<textarea class="p-4 " style="min-height:700px;min-width:100%;padding-top:20px;margin-top:10px;max-height:100%;max-width:100%">@ViewBag.Data </textarea>
}else{
<iframe src="@ViewBag.Data" class="embed-responsive-item" style="min-height:700px;min-width:100%;padding-top:20px;margin-top:10px;max-height:100%;max-width:100%" gesture="media" allow="encrypted-media" allowfullscreen></iframe>
}
